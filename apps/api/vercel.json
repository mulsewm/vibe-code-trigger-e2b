{
  "version": 2,
  "name": "vibe-code-api",
  "builds": [
    {
      "src": "src/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "src/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "src/index.ts"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "TRIGGER_API_KEY": "@trigger_api_key",
    "E2B_API_KEY": "@e2b_api_key"
  },
  "functions": {
    "src/index.ts": {
      "memory": 1024,
      "maxDuration": 60
    }
  }
}

